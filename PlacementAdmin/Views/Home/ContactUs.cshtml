@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Contact Us</h1>
        <p class="lead">We'd love to hear from you! Please reach out with any questions or support requests.</p>
    </div>
    <div class="row mt-4">
        <div class="col-md-6 offset-md-3">
            <form>
                <div class="form-group">
                    <label for="name" class="p-2">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter your name">
                </div>
                <div class="form-group">
                    <label for="email" class="p-2">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter your email">
                </div>
                <div class="form-group">
                    <label for="message" class="p-2">Message</label>
                    <textarea class="form-control my-3" id="message" rows="4" placeholder="Enter your message"></textarea>
                </div>
                <button type="submit" class="btn btn-primary my-3">Submit</button>
            </form>
        </div>
    </div>
</div>
